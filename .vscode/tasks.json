{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: cl.exe build active file",
            "command": "cl.exe",
            "args": [
                "/Zi",
                "/nologo",
                "/GR-", // No c++ runtime info
                "/EHa-", // No c++ exceptions
                "/Oi", // Intrinsics always on
                "/MT", // Statically link (default)
                "/Gm-", // No incremental builds
                // "/Fm${workspaceFolder}\\build\\win32_handmade.map", // Generate map file
                // "/O2",
                // "/Wall",
                "/std:c++20",
                "/Fe${workspaceFolder}\\build\\${fileBasenameNoExtension}.exe",
                "/Fd${workspaceFolder}\\build\\vc140.pdb",
                "/Fo${workspaceFolder}\\build\\${fileBasenameNoExtension}.obj",
                "${file}",
                "user32.lib",
                "gdi32.lib",
                "Xinput.lib",
                "Xaudio2.lib",
                "Ole32.lib",
                "Winmm.lib"
            ],
            "problemMatcher": [
                "$msCompile"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}