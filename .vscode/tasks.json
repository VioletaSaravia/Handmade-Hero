{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: cl.exe build main.c",
            "command": "cl.exe",
            "args": [
                "/DDEBUG",
                "/Zi",
                "/EHsc",
                "/nologo",
                "/Fo${workspaceFolder}\\build\\",
                "/Fd${workspaceFolder}\\build\\",
                "/Fe${workspaceFolder}\\build\\main.exe",
                "/I${workspaceFolder}\\vendor\\",
                "${workspaceFolder}\\src\\main.c",
                "${workspaceFolder}\\vendor\\glad.c",
                "/link User32.lib Gdi32.lib Winmm.lib opengl32.lib xinput.lib"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$msCompile"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}