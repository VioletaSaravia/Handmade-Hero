{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: cl.exe build active file",
            "command": "cl.exe",
            "args": [
                "/Zi",
                "/EHsc",
                "/nologo",
                //"/O2",
                //"/Wall",
                "/std:c++20",
                "/Fe${workspaceFolder}\\build\\${fileBasenameNoExtension}.exe",
                "/Fd${workspaceFolder}\\build\\vc140.pdb",
                "/Fo${workspaceFolder}\\build\\${fileBasenameNoExtension}.obj",
                "${file}",
                "user32.lib",
                "gdi32.lib",
                "Xinput.lib",
                "Xaudio2.lib",
                "Ole32.lib"
            ],
            "options": {
                "cwd": "${workspaceFolder}/data"
            },
            "problemMatcher": [
                "$msCompile"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}